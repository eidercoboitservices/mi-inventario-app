{
  "name": "mi-inventario",
  "version": "1.1.2",
  "description": "Sistema de inventario de escritorio con React y Electron",
  "author": "eidercoboitservices <eidercoboitservices@gmail.com> (+57 3003925981)",
  "main": "main.js",
  "homepage": "./",
  "scripts": {
    "start": "react-scripts start",
    "electron-start": "electron .",
    "build": "react-scripts build",
    "electron-pack": "electron-builder"
  },
  "build": {
    "appId": "com.mi-inventario",
    "productName": "Mi Inventario",
    "asar": true,
    "directories": {
      "output": "dist"
    },
    "files": [
      "build/**/*",
      "main.js",
      "preload.js",
      "node_modules/**/*"
    ],
    "extraMetadata": {
      "main": "main.js"
    },
    "win": {
      "target": "nsis",
      "icon": "assets/icon.ico"
    },
    "publish": [
      {
        "provider": "github",
        "owner": "eidercoboitservices",
        "repo": "mi-inventario-app"
      }
    ]
  },
  "dependencies": {
    "cors": "^2.8.5",
    "electron-updater": "^6.1.1",
    "express": "^5.1.0",
    "lucide-react": "^0.503.0",
    "pg": "^8.15.6",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "react-router-dom": "^7.5.3",
    "react-scripts": "^5.0.1",
    "react-toastify": "^11.0.5"
  },
  "devDependencies": {
    "@types/debug": "^4.1.12",
    "@types/minimatch": "^5.1.2",
    "@types/ms": "^2.1.0",
    "@types/react": "^19.1.2",
    "@types/react-dom": "^19.1.3",
    "@types/react-router-dom": "^5.3.3",
    "electron": "^23.0.0",
    "electron-builder": "^23.0.0"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
